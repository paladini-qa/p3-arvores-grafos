# Makefile para GrafoApp
CC = gcc
CFLAGS = -Wall -Wextra -std=c99
TARGET = GrafoApp
SOURCE = GrafoApp.c

# Diretórios
CAP3_DIR = ../Cap3
CAP4_DIR = ../Cap4

# Compilar o GrafoApp
$(TARGET): $(SOURCE)
	$(CC) $(CFLAGS) -o $(TARGET) $(SOURCE) -I$(CAP3_DIR) -I$(CAP4_DIR)

# Executar o programa
run: $(TARGET)
	./$(TARGET)

# Limpar arquivos gerados
clean:
	rm -f $(TARGET)

# Compilar com debug
debug: CFLAGS += -g -DDEBUG
debug: $(TARGET)

# Ajuda
help:
	@echo "Makefile para GrafoApp"
	@echo "Comandos disponíveis:"
	@echo "  make         - Compila o GrafoApp"
	@echo "  make run     - Compila e executa o GrafoApp"
	@echo "  make debug   - Compila com informações de debug"
	@echo "  make clean   - Remove arquivos compilados"
	@echo "  make help    - Mostra esta ajuda"

.PHONY: run clean debug help 